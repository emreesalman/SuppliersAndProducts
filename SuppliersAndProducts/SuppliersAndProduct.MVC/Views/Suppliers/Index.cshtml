@model IEnumerable<SuppliersAndProducts.Models.Classes.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h1>Suppliers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table  table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                Supplier ID
            </th>
            <th>
                Supplier Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
               
                @Html.ActionLink("Edit", "Edit", new { id = item.SupplierID }) |
                @Html.ActionLink("Details", "Details", new { id=item.SupplierID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SupplierID })
               
            </td>
        </tr>
}
    </tbody>
</table>
